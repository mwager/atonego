<?xml version='1.0' encoding='utf-8'?>
<widget id="de.mwager.atonego" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>AtOneGo</name>
    <description>
        AtOneGo - you gotta do what you got to do. The simple way!
    </description>
    <author href="http://mwager.de" email="mail@mwager.de">
        Michael Wager
    </author>

    <!-- =========================== CUSTOM start ============================= -->
    <access origin="https://atonego-mwager.rhcloud.com*"/>
    <access origin="https://at-one-go.com*"/>
    <access origin="*.atonego-mwager.rhcloud.com*"/>
    <access origin="*.at-one-go.com*"/>


    <!-- PREFS -->
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />

    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="FadeSplashScreenDuration" value=".50" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="ShowSplashScreenSpinner" value="true" />

    <preference name="BackupWebStorage" value="none" />
    <preference name="KeyboardDisplayRequiresUserAction" value="false" />
    <preference name="DisallowOverscroll" value="true" />

    <!-- PLUGINS -->
    <!-- XXX now The phonegap push plugin
    <feature name="PushPlugin">
        <param name="ios-package" value="PushPlugin" />
    </feature>
    -->

    <!-- =========================== CUSTOM end =============================== -->

</widget>
